{
  "tasks": {
    "dev": "deno run --watch main.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"],
      "exclude": ["prefer-const"]
    }
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 80,
    "semiColons": true,
    "exclude": ["node_modules", "dist", "build"]
  }
}
